<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>
        <div class="card show-card col-6 offset-3">
            <img src="<%= data.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= data.title %>
                    </b><br>
                    <%= data.description %> <br>
                        &#8377;<%= data.price.toLocaleString("en-IN") %> <br>
                            <%= data.location %> <br>
                                <%= data.country %>
                </p>
            </div>
        </div>
        <div class="btns mb-3">
            <a href="/listings/<%= data._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
            <form method="post" action="/listings/<%= data._id %>?_method=DELETE">
                <button class="btn btn-dark delete-btn offset-5">Delete</button>
            </form>
        </div>
    </div>